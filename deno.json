{
  "importMap": "./import-map.json",
  "tasks": {
    "run": "deno run --config './deno.json' --unstable --allow-env --allow-net='discord.com,gateway.discord.gg,localhost' --allow-read='.env,.env.example,.env.defaults' ./src/main.ts",
    "setup": "deno run --config './deno.json' --unstable --allow-env --allow-net='localhost' --allow-read='.env,.env.example,.env.defaults' ./scripts/setup.ts",
    "teardown": "deno run --config './deno.json' --unstable --allow-env --allow-net='localhost' --allow-read='.env,.env.example,.env.defaults' ./scripts/teardown.ts"
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 128,
      "singleQuote": true,
      "useTabs": false
    }
  },
  "lint": {
    "rules": {
      "exclude": [
        "require-await",
        "no-explicit-any"
      ]
    }
  }
}
